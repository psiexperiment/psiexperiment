enamldef TriggerManifest(PSIManifest): manifest:

    Extension:
        id = manifest.id + '.trigger_commands'
        point = 'enaml.workbench.core.commands'
        Command:
            id = f'{manifest.contribution.name}.fire'
            handler = lambda e: \
                manifest.contribution.fire(e.parameters.get('duration'))
