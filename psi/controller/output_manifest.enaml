################################################################################
# ToggleManifest
################################################################################
def toggle_off(event, output):
    output.set_low()


def toggle_on(event, output):
    output.set_high()


def toggle(event, output):
    if event.parameters['state']:
        toggle_on(event, output)
    else:
        toggle_off(event, output)


